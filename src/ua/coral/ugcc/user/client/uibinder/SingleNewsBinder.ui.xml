<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="res" type="ua.coral.ugcc.common.client.UGCCConstants"/>

    <ui:style>
        .title {
            padding-left: 15px;
            padding-right: 15px;
        }
    </ui:style>

    <g:HTMLPanel>
        <b:Panel>
            <b:PanelHeader>
                <b:Row addStyleNames="{style.title}">
                    <b:Button type="LINK" ui:field="linkedTitle" size="LARGE"/>
                </b:Row>
            </b:PanelHeader>
            <b:PanelBody>
                <g:HTML ui:field="content"/>
            </b:PanelBody>
            <b:PanelFooter>
            </b:PanelFooter>
        </b:Panel>
    </g:HTMLPanel>
</ui:UiBinder>