<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <g:HTMLPanel>
        <b:Panel>
            <b:PanelHeader>
                <b:Row>
                    <b:Column size="MD_9">
                        <b:Heading size="H4" ui:field="title"/>
                    </b:Column>
                    <b:Column size="MD_1">
                        <b:Button ui:field="editBtn" size="SMALL" text="Редагувати"/>
                    </b:Column>
                </b:Row>
            </b:PanelHeader>
            <b:PanelBody>
                <g:HTML ui:field="content"/>
            </b:PanelBody>
        </b:Panel>
    </g:HTMLPanel>
</ui:UiBinder>