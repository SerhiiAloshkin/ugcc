<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .anchor:hover {
            cursor: pointer;
        }

        .back-image {
            background-image: url("/img/kostel-sv-iosifa-nikolaev.jpg");
            background-repeat: no-repeat;
            background-size: 100% auto;
            height: 350px;
        }
    </ui:style>

    <ui:with field="res" type="ua.coral.ugcc.common.client.Resources"/>

    <g:HTMLPanel>

        <b:Jumbotron addStyleNames="{style.back-image}">

        </b:Jumbotron>

        <div class="row marketing">
            <div class="col-lg-6">
                <a class="{style.anchor} list-group-item" href="#news">
                    <h4 class="list-group-item-heading">Новини</h4>
                    <p class="list-group-item-text">Головні події та новини Української Греко-Католицької Церкви</p>
                </a>
                <a class="{style.anchor} list-group-item" href="#contacts">
                    <h4 class="list-group-item-heading">Контакти</h4>
                    <p class="list-group-item-text">Контактна інформація та зворотня адреса</p>
                </a>
                <a class="{style.anchor} list-group-item" href="#map">
                    <h4 class="list-group-item-heading">Карта проїзду</h4>
                    <p class="list-group-item-text"></p>
                </a>
            </div>

            <div class="col-lg-6">
                <a class="{style.anchor} list-group-item" href="#parish">
                    <h4 class="list-group-item-heading">Парафія</h4>
                    <p class="list-group-item-text">Загальна інформація про Миколаївську парафію</p>
                </a>
                <a class="{style.anchor} list-group-item" href="#schedule">
                    <h4 class="list-group-item-heading">Розклад богослужінь</h4>
                    <p class="list-group-item-text">Розклад щонедільних богослужінь та свят</p>
                </a>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>